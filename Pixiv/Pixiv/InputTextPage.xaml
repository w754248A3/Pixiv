<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pixiv.InputTextPage"
             xmlns:data="clr-namespace:Pixiv">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <CollectionView Grid.Row="0"
                        x:Name="m_collectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="data:InputTextPageBindingData">
                    <SwipeView Threshold="50">
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="LightPink"
                                           Command="{Binding Command}"
                                           CommandParameter="{Binding}" />  
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Label Text="{Binding Text}"
                               HeightRequest="60"></Label>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   x:Name="m_label"></Label>
            <Entry Grid.Column="1"
                   x:Name="m_entry"></Entry>
            <Button Grid.Column="2"
                    Text="确定"
                    Clicked="OnInputOK"></Button>
        </Grid>
    </Grid>
</ContentPage>